<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ssl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recharge_red_box"
            android:textColor="@color/remark_tips"
            android:textSize="@dimen/sp14" />

        <app.net.tongcheng.view.ScrollViewListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp"
            android:divider="@color/dividing_line_light"
            android:dividerHeight="0.5dp"
            android:listSelector="#00000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="将免费获取手机支付插件，该插件是由支付宝公司提供，请放心使用！"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp14" />

        <Button
            android:id="@+id/bt_recharge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14.6dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/red_button_box_select"
            android:minHeight="35dp"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

    </LinearLayout>
</ScrollView>