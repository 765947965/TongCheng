<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="14.6dp"
            android:text="姓名"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp16" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入开户名"
            android:padding="14.6dp"
            android:singleLine="true"
            android:textColor="@color/text_content"
            android:textColorHint="@color/remark_tips"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="14.6dp"
            android:text="卡号"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp16" />

        <EditText
            android:id="@+id/et_bank_card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入银行卡号"
            android:padding="14.6dp"
            android:singleLine="true"
            android:textColor="@color/text_content"
            android:textColorHint="@color/remark_tips"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="14.6dp"
            android:text="开户银行"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/et_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_enter"
            android:ellipsize="end"
            android:hint="请选择开户银行"
            android:padding="14.6dp"
            android:singleLine="true"
            android:textColor="@color/text_content"
            android:textColorHint="@color/remark_tips"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="14.6dp"
            android:text="开户所在地"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_enter"
            android:ellipsize="end"
            android:hint="请选择开户银行所在地"
            android:padding="14.6dp"
            android:singleLine="true"
            android:textColor="@color/text_content"
            android:textColorHint="@color/remark_tips"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="14.6dp"
            android:text="开户行网点"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp16" />

        <EditText
            android:id="@+id/et_port_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请填写开户行网点名称"
            android:padding="14.6dp"
            android:singleLine="true"
            android:textColor="@color/text_content"
            android:textColorHint="@color/remark_tips"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividing_line_light" />

    <Button
        android:id="@+id/bt_banding"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/red_button_box_select"
        android:minHeight="35dp"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
</LinearLayout>