<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_updata_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_sex_top_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="使用浏览器打开"
            android:textColor="@color/refurush_color"
            android:textSize="@dimen/sp12.6"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/left_right_space"
            android:layout_marginTop="@dimen/left_right_space"
            android:background="@drawable/dialog_sex_top_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="复制链接"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp12.6"/>
    </LinearLayout>
</RelativeLayout>