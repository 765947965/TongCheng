<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llt_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background"
              android:orientation="vertical"
              android:padding="14.6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="我的邀请人信息:"
        android:textColor="@color/remark_tips"
        android:textSize="@dimen/sp12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/spdchangenamewhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请人邀请码:"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp14"/>

        <EditText
            android:id="@+id/inputCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:enabled="false"
            android:hint="请输入邀请码"
            android:maxLength="10"
            android:textColor="@color/text_content"
            android:textColorHint="@color/remark_tips"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_content"
        android:textSize="@dimen/sp14"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_tips_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_content"
        android:textSize="@dimen/sp14"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_tips_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_content"
        android:textSize="@dimen/sp14"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/red_button_box_select"
        android:minHeight="35dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        android:visibility="gone"/>
</LinearLayout>