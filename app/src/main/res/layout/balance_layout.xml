<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llt_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/refurush_color"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="14.6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/balance_image" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_withdraw_ing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.6dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_can_recharge_ye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_can_withdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14.6dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14" />


                    <TextView
                        android:id="@+id/tv_can_ke_jie_dong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_banding_new_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="14.6dp"
        android:text="绑定新银行卡"
        android:textColor="@color/refurush_color"
        android:textSize="@dimen/sp12" />

    <Button
        android:id="@+id/btGuQaun"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_banding_new_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14.6dp"
        android:background="@drawable/red_button_box_select"
        android:minHeight="35dp"
        android:text="直推用户线下转增期权"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />


    <Button
        android:id="@+id/bt_withdraw_action"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btGuQaun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14.6dp"
        android:background="@drawable/red_button_box_select"
        android:minHeight="35dp"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bt_withdraw_action"
        android:layout_below="@id/llt_balance"
        android:background="@color/white"
        android:divider="@color/dividing_line_light"
        android:dividerHeight="0.5dp"
        android:listSelector="#00000000" />
</RelativeLayout>