<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/rlt_title"
        layout="@layout/red_head_view" />

    <LinearLayout
        android:id="@+id/llt_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:padding="14.6dp"
            android:text="新用户通过您分享的专属邀请码注册充值成功，您将可获得相应的分享补助红包"
            android:textColor="@color/text_content"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="分享多多 红包多多!"
            android:textColor="@color/refurush_color"
            android:textSize="@dimen/sp14" />

        <Button
            android:id="@+id/bt_share"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/red_button_box_select"
            android:minHeight="35dp"
            android:text="马上去分享"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llt_share"
        android:layout_below="@id/rlt_title">

        <TextView
            android:id="@+id/tv_share_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14.6dp"
            android:layout_marginLeft="14.6dp"
            android:layout_marginRight="14.6dp"
            android:background="@color/refurush_color"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </ScrollView>
</RelativeLayout>