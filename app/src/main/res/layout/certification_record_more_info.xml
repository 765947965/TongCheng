<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:textColor="@color/remark_tips"
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="真实姓名"
                    android:textColor="@color/remark_tips"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_14"
                android:background="@color/dividing_line_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/remark_tips"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_card_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_14"
                android:background="@color/dividing_line_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="证件审核"
                    android:textColor="@color/remark_tips"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/refurush_color"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_card_positive"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_weight="1"
                android:src="@drawable/id_card_front" />

            <ImageView
                android:id="@+id/iv_card_other_side"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_weight="1"
                android:src="@drawable/id_card_reverse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="身份证正面"
                android:textColor="@color/remark_tips"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="身份证反面"
                android:textColor="@color/remark_tips"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_synthesis"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_weight="1"
                android:src="@drawable/id_card_hand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="1、需本人上身免冠照；\n2、照片五官清晰可见；\n3、照片身份证号码可见。"
                android:textColor="@color/remark_tips"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_14"
            android:text="您提交的身份认证申请正在审核中，请耐心等待！感谢您对同城商城的支持。（遇节假日顺延审核时间）"
            android:textColor="@color/remark_tips"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</ScrollView>