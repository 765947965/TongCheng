<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mSwipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlt_head_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_head_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <ImageView
                    android:id="@+id/iv_head_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_head_image_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <RelativeLayout
                android:id="@+id/rlt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="名字"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_name_right"
                    android:layout_toRightOf="@id/tv_name_title"
                    android:gravity="right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="红包账号"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_num_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_num_right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="同城号"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_tcnum_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_tcnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_tcnum_right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rlt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="登录密码"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_password_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_password_right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <RelativeLayout
                android:id="@+id/rlt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:id="@+id/tv_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="地址"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_address_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_address_right"
                    android:layout_toRightOf="@id/tv_address_title"
                    android:gravity="right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <RelativeLayout
                android:id="@+id/rlt_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_sex_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_sex_right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <RelativeLayout
                android:id="@+id/rlt_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="地区"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_area_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_area_right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <RelativeLayout
                android:id="@+id/rlt_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="个性签名"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:id="@+id/iv_signature_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_enter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14.6dp"
                    android:layout_toLeftOf="@id/iv_signature_right"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dividing_line_light" />

            <Button
                android:id="@+id/bt_sumbit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/red_button_box_select"
                android:minHeight="35dp"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>