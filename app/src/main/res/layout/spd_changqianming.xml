<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/spdchangenamebanck">

        <EditText
            android:id="@+id/spd_cn_inputqianming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/inputqianming"
            android:lines="5"
            android:maxLength="30"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tjsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/spd_cn_inputqianming"
            android:layout_alignParentRight="true"
            android:text="@string/athree"
            android:textColor="#7cfc00"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/inputyouqianming_message"
        android:textColor="#464547"
        android:textSize="12sp" />
</LinearLayout>