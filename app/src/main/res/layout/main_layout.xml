<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlt_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <app.net.tongcheng.view.materialtabs.MaterialTabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        app:accentColor="@android:color/holo_green_light"
        app:clickAnim="true"
        app:primaryColor="@android:color/white"
        app:type="icon_text" />

    <View
        android:id="@+id/viewBaseLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/tabHost"
        android:background="@color/dividing_line_light" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/viewBaseLine" />

</RelativeLayout>